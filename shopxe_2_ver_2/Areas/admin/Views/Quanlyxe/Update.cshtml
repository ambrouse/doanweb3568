@model shopxe_2.Models.sanpham
@{
    ViewBag.Title = "Cập nhật thông tin xe";
    shopxe_2.Models.Database db = new shopxe_2.Models.Database();
    Layout = "~/Areas/admin/Views/layout/layout.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/accect/css/them.css" />
}
<div class="create">
    <form action="/admin/Quanlyxe/Update" enctype="multipart/form-data" class="create__item" method="post">
        <input type="text" name="ten" placeholder="nhap ten" value="@Model.ten">
        <input type="text" name="gia" placeholder="nhap gia tien" value="@Model.gia">
        <input type="number" name="id" value="@Model.id" style="visibility:hidden;" />
        <select name="hang">
            @foreach (var i in db.loais)
            {
                <option value="@i.id">@i.ten</option>
            }
        </select>
        <select name="loai">
            @foreach (var i in db.hangs)
            {
                <option value="@i.id">@i.ten</option>
            }
        </select>
        <input type="file" name="file_1" />
        <input type="file" name="file_2" />
        <input type="file" name="file_3" />
        <button type="submit">Cập nhật</button>
        <p style="color:darkred">@ViewBag.err</p>
    </form>
</div>

