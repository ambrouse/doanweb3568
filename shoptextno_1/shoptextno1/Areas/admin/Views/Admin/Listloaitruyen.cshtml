@model IEnumerable<shoptextno1.Models.theloai>
@{
    ViewBag.Title = "Listloaitruyen";
    Layout = "~/Views/layout/layout.cshtml";
}
<table>
    <tr>
        <th>ID</th>
        <th>Ten loai truyen</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var i in Model) {
        <tr>
            <td>@i.id</td>
            <td>@i.ten</td>
            <td><a href="~/admin/Admin/Updateloaitruyen/@i.id">update</a></td>
            <td><a href="#" onclick="deleteid(@i.id)">Delete</a></td>
        </tr>
    }
</table>
<script>
    var deleteid = (id) => {
        if (confirm("you sur") == true) {
            location.href = "/admin/Admin/Deleteloaitruyen/" + id;
        }
    }
</script>


